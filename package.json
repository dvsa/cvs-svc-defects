{
  "name": "cvs-svc-defects",
  "version": "1.0.0",
  "description": "",
  "main": "handler.js",
  "scripts": {
    "start": "npm run eslint && IS_OFFLINE=${IS_OFFLINE:-true} DYNAMO_PORT=${DYNAMO_PORT:-8000} SERVERLESS_PORT=${SERVERLESS_PORT:-3000} ./node_modules/serverless/bin/serverless offline start",
    "debug": "export SLS_DEBUG=* && node --inspect ./node_modules/serverless/bin/serverless offline start",
    "test": "IS_OFFLINE=${IS_OFFLINE:-true} DYNAMO_PORT=${DYNAMO_PORT:-8000} SERVERLESS_PORT=${SERVERLESS_PORT:-3000} node_modules/.bin/mocha tests/**/*.unitTest.js",
    "test-i": "IS_OFFLINE=${IS_OFFLINE:-true} DYNAMO_PORT=${DYNAMO_PORT:-8000} SERVERLESS_PORT=${SERVERLESS_PORT:-3000} node_modules/.bin/mocha tests/**/*.intTest.js",
    "dynamodb": "./node_modules/serverless/bin/serverless dynamodb start --seed=defects",
    "prepush": "IS_OFFLINE=${IS_OFFLINE:-true} DYNAMO_PORT=${DYNAMO_PORT:-8000} SERVERLESS_PORT=${SERVERLESS_PORT:-3000} npm test && npm run eslint",
    "predeploy": "npm install && npm run prepush",
    "security-checks": "git secrets --scan && git log -p | scanrepo",
    "eslint": "eslint . --config=.eslintrc.json --fix"
  },
  "author": "",
  "license": "MIT",
  "devDependencies": {
    "eslint": "^5.8.0",
    "eslint-config-standard": "^12.0.0",
    "eslint-plugin-import": "^2.14.0",
    "eslint-plugin-mocha": "^5.2.0",
    "eslint-plugin-node": "^8.0.0",
    "eslint-plugin-promise": "^4.0.1",
    "eslint-plugin-standard": "^4.0.0",
    "mocha": "^5.2.0",
    "serverless-dynamodb-local": "^0.2.35",
    "serverless-offline": "^3.27.0",
    "supertest": "^3.3.0",
    "standard": "^12.0.1"
  },
  "dependencies": {
    "aws-sdk": "^2.332.0",
    "expect": "^23.6.0",
    "serverless": "^1.32.0"
  }
}
