{
  "name": "cvs-svc-defects",
  "version": "1.0.0",
  "description": "Microservice that stores and serves the defects data",
  "main": "src/handler.js",
  "repository": {
    "type": "git",
    "url": "https://github.com/dvsa/cvs-svc-defects.git"
  },
  "scripts": {
    "start": "npm run eslint && BRANCH=local ./node_modules/serverless/bin/serverless offline start",
    "test": "node_modules/.bin/mocha tests/**/*.unitTest.js",
    "test-i": "BRANCH=local node_modules/.bin/mocha tests/**/*.intTest.js",
    "prepush": "BRANCH=local npm test && npm run eslint",
    "predeploy": "npm install && npm run prepush",
    "security-checks": "git secrets --scan && git log -p | scanrepo",
    "eslint": "eslint . --config=.eslintrc.json --fix  -f json -o report.json",
    "sonar-scanner": "npm run eslint && npm run coverage && sonar-scanner",
    "coverage": "nyc mocha tests/unit/*.unitTest.js && nyc report --reporter=lcov",
    "audit-dep": "npm audit --json | audit-filter --nsp-config=.nsprc --audit=-"
  },
  "author": "",
  "license": "MIT",
  "devDependencies": {
    "@types/chai": "^4.1.7",
    "@types/lambda-tester": "^3.5.1",
    "@types/mocha": "^5.2.5",
    "@types/node": "^10.14.9",
    "@types/request": "^2.48.1",
    "@types/supertest": "^2.0.8",
    "audit-filter": "^0.4.3",
    "chai": "^4.2.0",
    "eslint": "^5.8.0",
    "eslint-config-standard": "^12.0.0",
    "eslint-plugin-import": "^2.14.0",
    "eslint-plugin-mocha": "^5.2.0",
    "eslint-plugin-node": "^8.0.0",
    "eslint-plugin-promise": "^4.0.1",
    "eslint-plugin-standard": "^4.0.0",
    "expect": "^24.1.0",
    "gulp": "^4.0.0",
    "lambda-tester": "^3.5.0",
    "lodash": "^4.17.11",
    "mocha": "^5.2.0",
    "nyc": "^14.1.1",
    "serverless": "^1.42.3",
    "serverless-dynamodb-local": "^0.2.37",
    "serverless-offline": "^3.27.0",
    "serverless-plugin-tracing": "^2.0.0",
    "standard": "^12.0.1",
    "supertest": "^3.4.2",
    "ts-node": "^8.3.0",
    "tslint": "^5.12.1",
    "tslint-jsdoc-rules": "^0.1.3",
    "tslint-no-unused-expression-chai": "^0.1.4",
    "typescript": "^3.2.4"
  },
  "dependencies": {
    "aws-sdk": "^2.332.0",
    "aws-xray-sdk": "^2.3.2"
  }
}
